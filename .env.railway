# Variables de entorno para Railway - Configuración de Addons Personalizados

# Variables de base de datos (Railway las provee automáticamente)
# DATABASE_URL se configurará automáticamente por Railway
# Estas variables son de respaldo para casos específicos:
DATABASE_HOST=
DATABASE_PORT=5432
DATABASE_USER=
DATABASE_PASSWORD=
DATABASE_NAME=

# Configuración específica de Odoo para addons personalizados
ODOO_ADDONS_PATH=/usr/lib/python3/dist-packages/odoo/addons,/mnt/extra-addons
ODOO_DATA_DIR=/var/lib/odoo
ODOO_LOG_LEVEL=info
ODOO_WORKERS=2
ODOO_MAX_CRON_THREADS=1

# Configuración de proxy (importante para Railway)
ODOO_PROXY_MODE=True
ODOO_XMLRPC_PORT=8069
ODOO_LONGPOLLING_PORT=8072

# Configuración de seguridad
ODOO_LIST_DB=False
ODOO_WITHOUT_DEMO=True

# Configuración del administrador
ODOO_ADMIN_PASSWD=admin123

# Puerto para Railway (debe ser 8069 para Odoo)
PORT=8069
